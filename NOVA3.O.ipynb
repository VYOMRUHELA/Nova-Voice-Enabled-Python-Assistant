   "source": [
    "import pyttsx3\n",
    "import speech_recognition as sr\n",
    "import datetime\n",
    "import webbrowser\n",
    "import pyjokes\n",
    "import wikipedia\n",
    "import os\n",
    "# from playsound import playsound  # Uncomment if you use playsound instead\n",
    "\n",
    "engine = pyttsx3.init()\n",
    "engine.setProperty('rate', 175)\n",
    "voices = engine.getProperty('voices')\n",
    "engine.setProperty('voice', voices[0].id)  # 0 for male, 1 for female\n",
    "\n",
    "WAKE_WORD = \"nova\"\n",
    "\n",
    "def speak(text):\n",
    "    print(f\"Nova: {text}\")\n",
    "    engine.say(text)\n",
    "    engine.runAndWait()\n",
    "\n",
    "def take_command():\n",
    "    r = sr.Recognizer()\n",
    "    with sr.Microphone() as source:\n",
    "        print(\"Listening...\")\n",
    "        r.adjust_for_ambient_noise(source)\n",
    "        audio = r.listen(source)\n",
    "    try:\n",
    "        print(\"Recognizing...\")\n",
    "        command = r.recognize_google(audio).lower()\n",
    "        print(f\"You: {command}\")\n",
    "        return command\n",
    "    except sr.UnknownValueError:\n",
    "        print(\"Sorry, I didn't get that.\")\n",
    "        return \"\"\n",
    "    except sr.RequestError:\n",
    "        speak(\"Sorry, speech service is unavailable.\")\n",
    "        return \"\"\n",
    "\n",
    "def tell_time():\n",
    "    now = datetime.datetime.now().strftime(\"%H:%M:%S\")\n",
    "    speak(f\"The time is {now}\")\n",
    "\n",
    "def tell_joke():\n",
    "    speak(pyjokes.get_joke())\n",
    "\n",
    "def search_wikipedia(command):\n",
    "    try:\n",
    "        topic = command.replace(\"who is\", \"\").replace(\"what is\", \"\").strip()\n",
    "        info = wikipedia.summary(topic, sentences=2)\n",
    "        speak(info)\n",
    "    except Exception as e:\n",
    "        speak(\"Sorry, I couldn't find any information about that.\")\n",
    "\n",
    "def open_website(name):\n",
    "    sites = {\n",
    "        \"google\": \"https://www.google.com\",\n",
    "        \"youtube\": \"https://www.youtube.com\"\n",
    "    }\n",
    "    if name in sites:\n",
    "        speak(f\"Opening {name}\")\n",
    "        webbrowser.open(sites[name])\n",
    "    else:\n",
    "        speak(f\"Sorry, I don't know that site yet.\")\n",
    "\n",
    "def play_song(song_path=\"your_song.mp3\"):\n",
    "    try:\n",
    "        if os.path.isfile(song_path):\n",
    "            os.startfile(song_path)  # Only works on Windows\n",
    "            # playsound(song_path)  # Use this on Mac/Linux (need \"playsound\")\n",
    "            speak(\"Playing your song.\")\n",
    "        else:\n",
    "            speak(\"Song file not found.\")\n",
    "    except Exception as e:\n",
    "        speak(\"Unable to play the song.\")\n",
    "\n",
    "def process_command(command):\n",
    "    if 'time' in command:\n",
    "        tell_time()\n",
    "    elif 'joke' in command:\n",
    "        tell_joke()\n",
    "    elif 'who is' in command or 'what is' in command:\n",
    "        search_wikipedia(command)\n",
    "    elif 'open google' in command:\n",
    "        open_website(\"google\")\n",
    "    elif 'open youtube' in command:\n",
    "        open_website(\"youtube\")\n",
    "    elif 'play song' in command:\n",
    "        play_song(\"your_song.mp3\")  # Specify your file path\n",
    "    elif any(word in command for word in ['exit', 'goodbye', 'good night']):\n",
    "        speak(\"Goodnight! Shutting down.\")\n",
    "        return False\n",
    "    else:\n",
    "        speak(\"I don't understand that command yet.\")\n",
    "    return True\n",
    "\n",
    "# Main loop\n",
    "while True:\n",
    "    command = take_command()\n",
    "    # Check for exit at any stage\n",
    "    if any(word in command for word in ['exit', 'goodbye', 'good night']):\n",
    "        speak(\"Goodnight! Shutting down.\")\n",
    "        break\n",
    "    if WAKE_WORD in command:\n",
    "    # Remove the wake word and process what's left\n",
    "        command = command.replace(WAKE_WORD, \"\").strip()\n",
    "        if command:\n",
    "           process_command(command)\n",
    "        else:\n",
    "           speak(\"How can I help you?\")\n",
    "           command = take_command()\n",
    "           if not process_command(command):\n",
    "               break\n"
   ]
